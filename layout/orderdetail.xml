<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="22dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_photo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menuphoto5"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/dish_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spacy fresh crab"
                    android:gravity="center"
                    android:fontFamily="@font/benton2"
                    android:textColor="@color/fontColor1"
                    android:textFontWeight="400"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/dish_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waroenk kita"
                    android:gravity="center"
                    android:fontFamily="@font/benton2"
                    android:textColor="@color/fontcolor3"
                    android:textFontWeight="400"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/disc_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 35"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/benton"
                    android:textColor="@color/fontColor"
                    android:textFontWeight="400"
                    android:textSize="19dp"/>
            </LinearLayout>
        </LinearLayout>
       <LinearLayout android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginEnd="10dp"
           android:layout_gravity="center_vertical"
           >
           <TextView
               android:id="@+id/decrease"
               android:layout_width="30dp"
               android:gravity="center"
               android:layout_height="30dp"
               android:textColor="@color/fontColor"
               android:textSize="20dp"
               android:background="@drawable/addcartbutton1"
               android:text="-"/>
           <TextView
               android:id="@+id/quantity"
               android:layout_width="wrap_content"

               android:layout_height="30dp"
               android:textSize="20dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:text="1"/>
           <TextView
               android:id="@+id/incerase"
               android:layout_width="30dp"
               android:gravity="center"
               android:layout_height="30dp"
               android:textColor="@color/white"
               android:textSize="20dp"
               android:background="@drawable/addcartbutton"
               android:text="+"/>

       </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
