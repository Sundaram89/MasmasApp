<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pattern__2_"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <LinearLayout
            android:id="@+id/back6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/backgroundback"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/benton"
            android:lineHeight="40dp"
            android:text="Reset your password here"
            android:textAlignment="textStart"
            android:textColor="@color/fontColor1"
            android:textFontWeight="400"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back6" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/benton1"
            android:lineHeight="20dp"
            android:text="Select which contact details should we use to reset your password"
            android:textColor="@color/fontColor1"
            android:textFontWeight="400"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt1" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/newpassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/buttonbackground2"
            android:hint="New Password"
            app:passwordToggleTint="@color/togglecolor"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/txt5"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_pswrd"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/buttonbackground2"
                android:fontFamily="@font/inter"
                android:hint="New Password"
                android:inputType="textPassword"
                android:longClickable="false"
                android:paddingVertical="10dp"
                android:paddingStart="24dp"
                android:textFontWeight="600"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            app:passwordToggleTint="@color/togglecolor"
            android:background="@drawable/buttonbackground2"
            android:hint="Confirm Password"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newpassword"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_confirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/buttonbackground2"
                android:fontFamily="@font/inter"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:longClickable="false"
                android:paddingVertical="10dp"
                android:paddingStart="24dp"
                android:textFontWeight="600"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn12"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="125dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:layout_marginEnd="125dp"
        android:fontFamily="@font/benton"
        android:text="Next"
        android:textAllCaps="false"
        android:textFontWeight="400"
        android:textSize="16dp" />
</RelativeLayout>