<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pattern__2_"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <LinearLayout
            android:id="@+id/backButton7"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/buttonbackground"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/benton"
            android:lineHeight="40dp"
            android:text="Payment  "
            android:textAlignment="textStart"
            android:textColor="@color/fontColor1"
            android:textFontWeight="400"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backButton7"/>
        <FrameLayout
            android:id="@+id/frame_layout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/buttonbackground"
            app:layout_constraintTop_toBottomOf="@+id/txt1"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/button">
            <LinearLayout
                android:id="@+id/paypal_accoun1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_paypal_2__1__1"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textFontWeight="400"
                    android:textAlignment="textEnd"
                    android:textColor="@color/fontColor1"
                    android:fontFamily="@font/benton2"
                    android:layout_marginEnd="15dp"
                    android:text="2121 6352 8465 ****"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/paypal_accoun2"
               android:background="@drawable/buttonbackground"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_paypal_2__1__1"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textFontWeight="400"
                    android:textAlignment="textEnd"
                    android:textColor="@color/fontColor1"
                    android:fontFamily="@font/benton2"
                    android:layout_marginEnd="15dp"
                    android:text="2121 6352 8465 ****"
                    />
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_layout2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/frame_layout1"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/buttonbackground"
            android:backgroundTint="@color/button">
            <LinearLayout
                android:id="@+id/visa_account1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_visa__1__1"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textFontWeight="400"
                    android:textAlignment="textEnd"
                    android:textColor="@color/fontColor1"
                    android:fontFamily="@font/benton2"
                    android:layout_marginEnd="15dp"
                    android:text="2121 6352 8465 ****"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/visa_account2"
                android:visibility="gone"
                android:background="@drawable/buttonbackground"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_visa__1__1"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textFontWeight="400"
                    android:textAlignment="textEnd"
                    android:textColor="@color/fontColor1"
                    android:fontFamily="@font/benton2"
                    android:layout_marginEnd="15dp"
                    android:text="2121 6352 8465 ****"
                    />
            </LinearLayout>


        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_layout3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/frame_layout2"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/buttonbackground"
            android:backgroundTint="@color/button">
            <LinearLayout
                android:id="@+id/payneer_account1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_payoneer_logo_1"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textFontWeight="400"
                    android:textAlignment="textEnd"
                    android:textColor="@color/fontColor1"
                    android:fontFamily="@font/benton2"
                    android:layout_marginEnd="15dp"
                    android:text="2121 6352 8465 ****"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/payneer_account2"
                android:visibility="gone"
                android:background="@drawable/buttonbackground"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_payoneer_logo_1"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textFontWeight="400"
                    android:textAlignment="textEnd"
                    android:textColor="@color/fontColor1"
                    android:fontFamily="@font/benton2"
                    android:layout_marginEnd="15dp"
                    android:text="2121 6352 8465 ****"
                    />
            </LinearLayout>


        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>