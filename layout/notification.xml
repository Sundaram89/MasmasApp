<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="22dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/order_confirmationpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_checked__1__1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/benton2"
                android:textColor="@color/fontColor1"
                android:textFontWeight="400"
                android:textSize="15dp"
                android:text="Your order has been taken by the driver"/>
            <TextView
                android:id="@+id/order_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/benton2"
                android:layout_marginTop="5dp"
                android:textColor="@color/fontcolor3"
                android:textFontWeight="400"
                android:textSize="14dp"
                android:text="Recently"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>