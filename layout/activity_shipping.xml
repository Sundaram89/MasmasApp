<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/ic_pattern__2_"
                >
            </ImageView>

            <LinearLayout
                android:id="@+id/backButton8"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/backgroundback"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:lineHeight="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/benton"
                android:text="Shipping"
                android:textColor="@color/fontColor1"
                android:textFontWeight="400"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backButton8" />
            <androidx.cardview.widget.CardView
                android:id="@+id/location_card1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardCornerRadius="22dp"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                app:layout_constraintStart_toStartOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textFontWeight="400"
                            android:textColor="@color/fontcolor3"
                            android:fontFamily="@font/benton2"
                            android:layout_marginStart="10dp"
                            android:text="Order Location"
                            >

                        </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_icon_location"/>
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textFontWeight="400"
                            android:textColor="@color/fontColor1"
                            android:fontFamily="@font/benton2"
                            android:layout_marginEnd="15dp"
                            android:lineHeight="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="4517 Washington Ave. Manchester, Kentucky 39495"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/location_card2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardCornerRadius="22dp"
                app:layout_constraintTop_toBottomOf="@+id/location_card1"
                app:layout_constraintStart_toStartOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textFontWeight="400"
                        android:textColor="@color/fontcolor3"
                        android:fontFamily="@font/benton2"
                        android:layout_marginStart="10dp"
                        android:text="Deliver To"
                        >

                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_icon_location"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textFontWeight="400"
                            android:textColor="@color/fontColor1"
                            android:fontFamily="@font/benton2"
                            android:layout_marginEnd="15dp"
                            android:lineHeight="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="4517 Washington Ave. Manchester, Kentucky 39495"
                            />
                            <TextView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:textFontWeight="400"
                                android:textColor="@color/fontColor"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/benton2"
                                android:layout_marginStart="20dp"
                                android:text="set location"
                                android:id="@+id/set_location"
                                >
                            </TextView>
                    </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>