<androidx.cardview.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/resturant_logo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/resturant_image1"/>
        <TextView
            android:id="@+id/resturant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/benton"
            android:textColor="@color/fontColor1"
            android:textFontWeight="400"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:text="Vegan Resto"/>
        <TextView
            android:id="@+id/resturant_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Mins"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            android:textFontWeight="400"
            android:textColor="@color/fontcolor3"
            android:fontFamily="@font/benton1"/>


        
    </LinearLayout>
        

</androidx.cardview.widget.CardView>
